<KitchenSinkCards>
    radius: [1] * 4
    elevation: 1
    name: "cards"

    Toolbar:
        id: toolbar
        title: "MDCard"
        pos_hint: {"top": 1}

    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_size: True
        spacing: "56dp"
        padding: "56dp"

        MDCard:
            size_hint: None, None
            size: root.width / 2 - dp(56), "180dp"
            radius: root.radius
            elevation: root.elevation

        MDCard:
            size_hint: None, None
            size: root.width / 2 - dp(56), "180dp"
            radius: root.radius
            elevation: root.elevation

    MDGridLayout:
        cols: 2
        adaptive_height: True
        padding: "8dp"
        spacing: "8dp"

        MDLabel:
            text: "Radius"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            size_hint_y: None
            height: self.texture_size[1]
            shorten: False
            shorten_from: "left"

        MDLabel:
            text: "Elevation"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            adaptive_height: True
            shorten_from: "left"

        MDSlider:
            size_hint_y: None
            height: "48dp"
            min: 0
            max: 12
            value: 0
            on_value: root.radius = [self.value] * 4

        MDSlider:
            size_hint_y: None
            height: "48dp"
            min: 0
            max: 90
            value: 0
            on_value: root.elevation = self.value
