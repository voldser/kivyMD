<KitchenSinkPickers>
    name: "pickers"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDBoxLayout:
        spacing: "12dp"
        orientation: "vertical"
        adaptive_size: True
        pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "vertical"
            adaptive_size: True
            spacing: "12dp"

            MDRaisedButton:
                text: "Open time picker"
                on_release: root.show_example_time_picker()

            MDLabel:
                id: time_picker_label
                adaptive_height: True
                halign: "center"
                text: "00:00"

        MDBoxLayout:
            orientation: "vertical"
            adaptive_size: True
            spacing: "12dp"

            MDRaisedButton:
                text: "Open date picker"
                on_release: root.show_example_date_picker()

            MDLabel:
                id: date_picker_label
                adaptive_height: True
                halign: "center"
                text: "01.01.20"
