<ProgressBars@MDScreen>
    name: "progress bar"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        BoxLayout:
            orientation:"vertical"
            padding: "8dp"

            MDLabel:
                text: "Slider with [b]hint = True[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"

            MDSlider:
                id: progress_slider
                min: 0
                max: 100
                value: 40

            MDLabel:
                text: "Slider with [b]hint = False[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"

            MDSlider:
                id: progress_slider
                min: 0
                max: 100
                value: 40
                hint: False

            MDLabel:
                text: "Examples [b]MDProgressBar[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"

            MDBoxLayout:
                spacing: "8dp"
                adaptive_height: True

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "8dp"

                    MDProgressBar:
                        value: progress_slider.value
                        size_hint_y: None
                        height: "4dp"

                    MDProgressBar:
                        reversed: True
                        value: progress_slider.value
                        size_hint_y: None
                        height: "4dp"

                MDBoxLayout:
                    spacing: "8dp"

                    MDProgressBar:
                        orientation: "vertical"
                        reversed: True
                        size_hint_x: None
                        width: "4dp"
                        value: progress_slider.value

                    MDProgressBar:
                        orientation: "vertical"
                        size_hint_x: None
                        width: "4dp"
                        value: progress_slider.value
