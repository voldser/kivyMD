<KitchenSinkElevationExampleCard@MDCard>
    size_hint: None, None
    size: "60dp", "60dp"
    md_bg_color: app.theme_cls.bg_normal

    MDLabel:
        text: str(root.elevation)
        halign: "center"
        valign: "center"


<KitchenSinkElevationExampleCircle>
    size_hint: None, None
    size: "60dp", "60dp"
    md_bg_color: app.theme_cls.bg_normal

    MDLabel:
        text: str(root.elevation)
        halign: "center"
        valign: "center"


<KitchenSinkElevationScreen>
    name: "elevation"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDBoxLayout:
        orientation: "vertical"
        padding: "32dp"
        spacing: "24dp"
        adaptive_size: True
        pos_hint: {"center_x": .5, "center_y": .5}

        MDLabel:
            text: "Elevation value"
            font_style: "H5"
            adaptive_size: True
            pos_hint: {"center_x": .5}

        MDSeparator:

        MDBoxLayout:
            spacing: "32dp"
            adaptive_size: True

            KitchenSinkElevationExampleCard:
                elevation: 6

            KitchenSinkElevationExampleCard:
                elevation: 12

            KitchenSinkElevationExampleCard:
                elevation: 24

            KitchenSinkElevationExampleCard:
                elevation: 36

        MDSeparator:

        MDBoxLayout:
            spacing: "32dp"
            adaptive_size: True

            KitchenSinkElevationExampleCircle:
                elevation: 6

            KitchenSinkElevationExampleCircle:
                elevation: 12

            KitchenSinkElevationExampleCircle:
                elevation: 24

            KitchenSinkElevationExampleCircle:
                elevation: 36

        MDSeparator:

        MDScreen:
            size_hint: None, None
            size: "120dp", "120dp"
            pos_hint: {"center_x": .5}

            KitchenSinkElevationExampleCard:
                elevation: 6

            KitchenSinkElevationExampleCard:
                elevation: 36
                x: 36
                y: 36
